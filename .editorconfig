# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf

[*.{rb,nix}]
indent_size = 2
indent_style = space
trim_trailing_whitespace = true

[*.erb]
indent_size = 4
indent_style = space
trim_trailing_whitespace = true

[*.css]
indent_size = 4
indent_style = tab
trim_trailing_whitespace = true
